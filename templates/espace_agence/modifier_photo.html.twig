 {% extends 'espace_agence_base.html.twig' %}
{% block title %} Espace Agence- Changer Image D'Agence{% endblock %}

{% block body_notification %}

{% if app.request.query.get("notification")  is not null %} onload="setTimeout(cacherDiv,3000);" {% endif %}

{% endblock %}


{% block section %}
    <article>



<h2>Changer Image D'Agence</h2>



{% if app.request.query.get("notification")  is not null  %} 


<div id="notification">
                <div class="rectangle {{app.request.query.get("notification") }}">
                    <div class="notification-text">
                        <img src="/images/icone/{{app.request.query.get("notification") }}.svg" id="icone_notification">
                        <span>{{app.request.query.get("contenu") }}</span>
                    </div>
                </div>
            </div>
       

 {% endif %}
  
      <div  class="bloc">
 
 <form method="post"  action="{{path('espace_agence_changer_photo')}}" enctype="multipart/form-data">
              

                <center>

              <div class="input-file">
													<img id="file_upload" src="/images/photo/{{app.user.agence.photo}}" alt="your image" class="upload-img" />
													<div class="input-file-upload">
														<span class="upload-label">Choisir Une Image</span>
														<input type='file' onchange="readURL(this);" name="photo" accept="image/*" required />
													</div>
												</div>
			
                </center>
       
                
                


                

             




          
          <center>
          <div>
            <button type="submit" class="connection_bouton">Modifier</button>
          </div></center>


          </div>
        </form>
        
      </div>
      
      
  



    </article>


{% endblock %}